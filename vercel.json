{
    "version": 2,
    "builds": [
        {
            "src": "backend/app.py",
            "use": "@vercel/python"
        },
        {
            "src": "frontend/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "backend/app.py"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/$1",
            "continue": true
        }
    ],
    "installCommand": "pip install -r requirements.txt"
} 