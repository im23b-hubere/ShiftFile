{
    "version": 2,
    "builds": [
        {
            "src": "backend/app.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "backend/app.py"
        }
    ],
    "env": {
        "PYTHONPATH": "backend"
    },
    "functions": {
        "backend/app.py": {
            "memory": 1024,
            "maxDuration": 60
        }
    }
} 