{
    "version": 2,
    "builds": [
        {
            "src": "backend/app.py",
            "use": "@vercel/python"
        },
        {
            "src": "frontend/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/convert",
            "dest": "backend/app.py"
        },
        {
            "src": "/formats",
            "dest": "backend/app.py"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/$1"
        }
    ],
    "installCommand": "pip install -r requirements.txt",
    "env": {
        "PYTHON_VERSION": "3.11"
    }
} 