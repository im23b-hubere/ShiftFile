{
    "version": 2,
    "builds": [
        {
            "src": "backend/app.py",
            "use": "@vercel/python"
        },
        {
            "src": "frontend/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/app.py"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/$1"
        }
    ],
    "env": {
        "PYTHONPATH": ".",
        "FFMPEG_BINARY": "/usr/bin/ffmpeg"
    },
    "functions": {
        "backend/app.py": {
            "memory": 1024,
            "maxDuration": 60
        }
    }
} 